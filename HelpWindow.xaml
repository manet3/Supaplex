<Window x:Class="Supaplex.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Users Guide(Ukr)" MinWidth="900" Height="900" Width="1000" Icon="Images\MurphyD.png">
    <Window.Background>
        <ImageBrush ImageSource="Images/background.gif" Stretch="UniformToFill"></ImageBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition MinWidth="800" Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <RichTextBox Name="rtfBox" Grid.Column="2" Opacity="0.98"> </RichTextBox>
        <Canvas Grid.Column="1" Background="White" Opacity="0.95"></Canvas>
        <Canvas Grid.Column="3" Background="White" Opacity="0.95"></Canvas>
    </Grid>
</Window>
